@using DepoYonetimSistemi.EntityLayer
@model Depo
@{
    ViewBag.Title = "Depo Sil";
}

<div class="row">
    <div class="col-12">
        <h3>Depo Sil</h3>
    </div>
</div>
<hr />

@using (Html.BeginForm("Delete", "Depo", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row mb-2">
        <div class="col-12">
            <p><b> @Model.Ad </b> adlı depoyu silmek istiyor musunuz ??</p>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-sm-12">
            <a href="@Url.Action("Index","Depo")" class="btn btn-danger">
                <i class="fa fa-thumbs-down"> İptal</i>
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-thumbs-up"> Kaydet</i>
            </button>
        </div>
    </div>
}
