@{
    ViewBag.Title = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 100px;
        }

        .welcome-message {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .btn-login {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 20px;
            padding: 10px 20px;
            font-size: 16px;
        }

            .btn-login:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h2>Depo Yönetim Sistemine Hoş Geldiniz</h2>
            <p>Sisteme giriş yapmak için lütfen aşağıdaki butona tıklayın.</p>
        </div>
        <div class="text-center">
            <a href="@Url.Action("Index", "Login", new { area = "Yonetim" })" class="btn btn-primary btn-lg btn-login">Giriş Yap</a>
        </div>
    </div>
</body>
</html>
